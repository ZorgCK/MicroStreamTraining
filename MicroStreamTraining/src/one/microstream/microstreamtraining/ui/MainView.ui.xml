<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<?xdevuiml version="1.0"?>
<?template BROWSER_XGA?>
<?import com.xdev.ui.XdevButton?>
<?import com.xdev.ui.XdevGridLayout?>
<?import com.xdev.ui.XdevView?>
<?import com.xdev.ui.entitycomponent.table.XdevTable?>
<?import java.lang.Integer?>
<?import java.lang.String?>
<?import one.microstream.microstreamtraining.entities.Customer?>
<XdevView xmlns:x="http://xml.xdev-software.com/xdevuiml" x:name="MainView">
    <x:constraints zpos="0" width="100%" height="100%" />
    <XdevGridLayout x:name="gridLayout">
        <x:constraints zpos="0" width="100%" height="100%" />
        <XdevButton caption="Erzeugen" x:name="btnSave">
            <x:constraints gridx="1" gridy="1" weighty="0.0" weightx="0.1" width="100%" height="-1px" />
            <x:event>click.buttonClick</x:event>
        </XdevButton>
        <XdevButton caption="Laden" x:name="btnLoad">
            <x:constraints gridx="1" gridy="2" weighty="0.0" weightx="0.1" width="100%" height="-1px" />
            <x:event>click.buttonClick</x:event>
        </XdevButton>
        <XdevTable x:name="table" x:entity="Customer">
            <x:entityProperties>
                <entry type="String" property="firstname" />
                <entry type="Integer" property="id" />
                <entry type="String" property="lastname" />
                <entry type="String" property="mail" />
            </x:entityProperties>
            <x:constraints gridx="1" gridy="3" weighty="1.0" weightx="0.1" width="100%" height="100%" />
            <x:typeArguments>
                <typeArgument type="Customer" />
            </x:typeArguments>
        </XdevTable>
    </XdevGridLayout>
</XdevView>

